<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grade1"


    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="136dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        app:srcCompat="@drawable/spot1" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:background="11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="enter username"
        android:inputType="textPersonName"
        android:text="Username"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignStart="@id/edt_email"
        android:layout_alignLeft="@id/edt_email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="88dp"
        android:background="11000000"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="enter email"
        android:inputType="textPersonName"
        android:text="Email"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="470dp"
        android:layout_marginRight="103dp"
        android:background="11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPassword"
        android:textSize="18dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_below="@id/edt_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="281dp"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_centreInParent="true"
                android:layout_marginRight="131dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="191dp"
        android:layout_marginRight="191dp"
        android:text="Register Here." />

</RelativeLayout>